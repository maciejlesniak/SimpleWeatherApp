<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/iconText"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/weather_cloudy"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/dateText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="264dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Date"
        android:textAlignment="textStart"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tempText"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tempText"
        android:layout_width="264dp"
        android:layout_height="33dp"
        android:text="@string/temp_min_max_paceholder"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dateText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iconText"
        android:layout_marginLeft="8dp" />
</android.support.constraint.ConstraintLayout>